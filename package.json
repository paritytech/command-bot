  "scripts": {
    "test:unit": "node --experimental-vm-modules node_modules/.bin/jest --passWithNoTests -c jest.unit.config.cjs",
    "test:integration": "node --experimental-vm-modules node_modules/.bin/jest --runInBand -c jest.integration.config.cjs",
    "test": "yarn test:unit && yarn test:integration",
    "typecheck": "tsc --noEmit",
    "prettier": "prettier --loglevel silent '{*,**/*}.{json,html}'",
    "lint": "pre-commit run --color=always --all",
    "fix:eslint": "eslint --fix",
    "fix:prettier": "prettier --write",
    "fix": "yarn fix:eslint '{*,**/*}.{cjs,ts}' && yarn fix:prettier '{*,**/*}.json'",
    "start:prefix": "node --es-module-specifier-resolution=node --loader ./loader.cjs",
    "start": "yarn start:prefix ./src/main.ts",
    "dev": "yarn start:prefix --trace-warnings -r ./.env.cjs ./src/main.ts",
    "watch": "nodemon --no-update-notifier --watch src --watch .env.cjs -e cjs,ts --exec \"yarn dev\""
  }
}
