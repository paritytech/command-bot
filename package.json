    "@octokit/webhooks": "10.0.0",
    "@types/node-fetch": "^2.6.2",
    "async-mutex": "0.3.2",
    "date-fns": "2.28.0",
    "glob": "^8.0.3",
    "joi": "^17.6.0",
    "level-rocksdb": "5.0.0",
    "lodash": "4.17.21",
    "matrix-bot-sdk": "0.6.3",
    "node-fetch": "^2.6.7",
    "opstooling-js": "https://github.com/paritytech/opstooling-js#v0.0.14",
    "opstooling-js-style": "https://github.com/paritytech/opstooling-js-style.git#^v1.0.0",
    "probot": "^12.2.8",
    "stoppable": "1.1.0",
    "ts-node": "^10.7.0",
    "yaml": "^2.0.1",
    "yargs": "^17.5.0"
  },
  "devDependencies": {
    "@octokit/auth-app": "4.0.4",
    "@resolritter/tsc-files": "^1.1.4",
    "@types/abstract-leveldown": "7.2.0",
    "@types/jest": "^29.0.0",
    "@types/levelup": "5.1.1",
    "@types/lodash": "4.14.181",
    "@types/node": "^16",
    "@types/rocksdb": "3.0.1",
    "@types/shelljs": "0.8.11",
    "@types/stoppable": "1.1.1",
    "@types/yargs": "^17.0.10",
    "jest": "^29.0.0",
    "json-schema-to-typescript": "^11.0.2",
    "mockttp": "^3.6.2",
    "nodemon": "2.0.19",
    "prettier": "^2.7.1",
    "rimraf": "3.0.2",
    "selfsigned": "^2.1.0",
    "smee-client": "^1.2.3",
    "ts-jest": "^29.0.0",
    "ts-patch": "^2.1.0",
    "typescript": "4.6.3",
    "typescript-transform-paths": "^3.4.4"
  },
  "scripts": {
    "prepare": "ts-patch install -s",
    "schema": "json2ts -i ./src/schema/schema.cmd.json -o ./src/schema/schema.cmd.d.ts",
    "pretest:unit": "yarn schema",
    "test:unit": "jest --passWithNoTests -c jest.unit.config.cjs",
    "pretest:integration": "yarn build",
    "test:integration": "node --experimental-vm-modules node_modules/.bin/jest --runInBand -c jest.integration.config.cjs",
    "test": "yarn test:unit && yarn test:integration",
    "typecheck": "tsc --noEmit",
    "prettier": "prettier --loglevel silent '{*,**/*}.{json,html}'",
    "prelint": "yarn schema",
    "lint": "pre-commit run --color=always --all",
    "fix:eslint": "eslint --fix",
    "fix:prettier": "prettier --write",
    "fix": "yarn fix:eslint '{*,**/*}.{cjs,ts}' && yarn fix:prettier '{*,**/*}.json'",
    "prebuild": "yarn schema",
    "build": "tsc",
    "start": "TS_NODE_BASEURL=./build node -r ./.env.cjs ./build/main.js",
    "dev": "yarn schema && nodemon --no-update-notifier -- ./src/main.ts"
  }
}
